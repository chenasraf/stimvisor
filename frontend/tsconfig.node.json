{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@ui/*": [
        "./src/components/ui/*"
      ],
      "$app": [
        "./wailsjs/go/main/App"
      ],
      "$main/*": [
        "./wailsjs/go/main/*"
      ],
      "$runtime/*": [
        "./wailsjs/runtime/*"
      ],
      "$models": [
        "./wailsjs/go/models"
      ]
    }
  },
  "include": [
    "vite.config.ts"
  ]
}
